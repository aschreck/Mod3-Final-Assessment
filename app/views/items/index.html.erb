<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <div class="search">
    <%= form_tag('/search', method: "get") do %>
      <%=submit_tag 'Search', class: 'searchButton' %>
      <%= text_field_tag 'search' %>
    <% end %>
  </div>
  <% @items.each do |item| %>
    <div class="item col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>

